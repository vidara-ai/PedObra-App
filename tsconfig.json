{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": [
    "./index.tsx",
    "./App.tsx",
    "./components",
    "./pages",
    "./hooks",
    "./contexts",
    "./services",
    "./types.ts",
    "./constants.tsx",
    "./vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server",
    "supabase",
    "functions"
  ]
}